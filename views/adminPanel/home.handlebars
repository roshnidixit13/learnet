{{> _admin_nav}}
    <div class="container mt-3 mx-auto mb-4">
       <div class="row">
        {{#each courses}}
             <div class="col-md-4 col-sm-6">
                <div class="card card-body">
                    <div class="course-card-img" style="background-image:url({{thumbUrl}})"></div>
                   <h3>{{title}}</h3>
                    <p>{{description}}</p>
                     <a class="btn btn-dark btn-block" href="/ln-admin/course/analytics/{{id}}">View Analytics</a>
                </div>
            </div>
        {{else}}
            <p>No Course Right Now</p>
        {{/each}}
       </div>
    </div>  