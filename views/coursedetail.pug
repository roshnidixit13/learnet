doctype
html(lang='en')
    head
        include ./includes/head.pug
        style.
            .subscribe{
                text-align: center;
                background: #f5f5f5;
            }
            .header{
                background-image: url('img/ai_bg.svg');
            }
            .hero-text{
                margin-top: -15vh;
            }
            .hero-text > h1{
                font-size: 2rem;
                margin: 9px 0px;
            }
            .hero-text > p{
                margin: 19px 0px;
            }
            @media (max-width: 676px){
                .hero-text{
                    margin-left: 19px;
                    margin-top: -23vh;
                }
                .header{
                    background-image: none;
                }
            }
    body
        .wrapper
            .header
                include ./includes/nav.pug
                .hero-text
                    h1 #{topCourse.name}
                    p #{topCourse.discription}
                    .cta
                        a.btn.primary(href="#subscribe") Subscribe
        if courses != undefined
            .courses
                //- Shows a list of other courses
                .heading
                    h2 Other related courses
                    p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquam consequuntur quos culpa odit cum natus, quasi molestiae minus, iure, deleniti facere ipsa nemo debitis porro autem praesentium facilis optio ullam?
                .row
                    include ./includes/course_cards.pug
        
        .subscribe#subscribe
            include ./includes/subscribe.html
        .footer
            .copyright
                p &copy; Learnet Education
            .others
                
        include ./includes/scripts.pug
