doctype
html(lang='en')
    head
        include ./includes/head.pug
        style.
            .subscribe{
                text-align: center;
                background: #f5f5f5;
            }
            .header{
                background-image: url('img/ai_bg.svg');
            }

            .hero-text > h1{
                margin: 9px 0px;
            }
            .hero-text > p{
                margin: 19px 0px;
            }
            @media (max-width: 676px){
                .hero-text{
                    margin-left: 19px;
                }
                .header{
                    background-image: none;
                }
            }
    body
        .wrapper
            include ./includes/nav.pug
            .header
                .hero-text
                    h1 #{topCourse.name}
                    p #{topCourse.discription}
                    .cta
                        a.btn.primary(href="#subscribe") Subscribe
        if courses != undefined
            .courses
                //- Shows a list of other courses
                .heading
                    h2 Other related courses
                .row
                    include ./includes/course_cards.pug
        
        .subscribe#subscribe
            include ./includes/subscribe.html
                
        include ./includes/scripts.pug
